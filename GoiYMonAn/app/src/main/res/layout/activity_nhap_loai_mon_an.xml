<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minhduc.goiymonan.NhapLoaiMonAnActivity">
   <TextView
    android:id="@+id/textTitleLoai"
    android:padding="10dp"
    android:gravity="center"
    android:textStyle="bold"
    android:textSize="30sp"
    android:text="Thêm loại Món Ăn "
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true" />

    <EditText
        android:layout_marginTop="10dp"
        android:hint="Nhập Id Loại Sản phẩm"
        android:id="@+id/editIDLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitleLoai"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText

        android:layout_marginTop="10dp"
        android:layout_below="@+id/editIDLoai"
        android:hint="Loại"
        android:id="@+id/editLoaiNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@drawable/sanpham"
        android:id="@+id/imagviewLoaiSanPham"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/editLoaiNhap"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_marginLeft="70dp"
        android:text="Thêm"
        android:id="@+id/buttonThemLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/imagviewLoaiSanPham"
        />
    <Button
        android:text="Hủy"
        android:id="@+id/buttonHuyLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonThemLoai"
        android:layout_alignBottom="@+id/buttonThemLoai"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp" />

</RelativeLayout>
